{
  "name": "name",
  "homepage": "http://nodemon.io",
  "restartable": "rs",
  "verbose": true,
  "delay": "2",
  "ignore": ["*.js", "*.test.js", "dist", "node_modules", ".git"],
  "watch": ["src"],
  "execMap": {
    "ts": "tsc src/**/*",
    "jsx": "",
    "js": "rollup -c ./src/index.js",
    "scss": "npm run css",
    "pug": "pug ./src -o ./dist -P"
  }
}
